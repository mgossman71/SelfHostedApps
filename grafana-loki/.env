# === General ===
TZ=America/Chicago
STACK_NAME=loki-stack

# === Networking ===
# Bind addresses are optional; leave blank to bind all
LOKI_LISTEN_ADDR=0.0.0.0
LOKI_HTTP_PORT=3100
PROMTAIL_HTTP_PORT=9080

# === Paths (relative to repo root) ===
LOKI_DATA_DIR=./loki/data
PROMTAIL_POSITIONS_DIR=./promtail/positions

# === Loki tuning ===
# Retain logs for 7 days (h=hours, 168h = 7d)
LOKI_RETENTION=168h
LOKI_LOG_LEVEL=info
